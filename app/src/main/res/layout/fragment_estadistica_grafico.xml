<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.expediodigital.ventas360.view.fragment.EstadisticaGraficoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_activity_general"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_programadosVSvisitados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Programados vs Visitados"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_gravity="center"/>
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/piechart_visitados"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_horizontal_activity"
            android:layout_width="match_parent"
            android:layout_height="@dimen/estadistica_chart_size"/>

        <TextView
            android:id="@+id/tv_programadosVSefectivos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Programados vs Efectivos"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_gravity="center"/>
        <com.github.mikephil.charting.charts.PieChart
            android:layout_gravity="center_horizontal"
            android:id="@+id/piechart_efectivos"
            android:layout_width="match_parent"
            android:layout_height="@dimen/estadistica_chart_size"/>
    </LinearLayout>

</ScrollView>
