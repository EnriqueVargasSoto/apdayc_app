<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.expediodigital.ventas360.view.fragment.EstadisticasFragment">
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!-- Table header -->
            <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Marca" android:layout_gravity="center_vertical" android:padding="@dimen/padding_item_row_layout"/>
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:padding="@dimen/padding_item_row_layout">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Pre Venta" android:layout_gravity="center"/>
                    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="PQTES" android:padding="@dimen/padding_item_row_layout"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="UNID" android:padding="@dimen/padding_item_row_layout"/>
                    </LinearLayout>
                </LinearLayout>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Soles" android:layout_gravity="center_vertical" android:padding="@dimen/padding_item_row_layout"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="NÂ°Clientes" android:layout_gravity="center_vertical" android:padding="@dimen/padding_item_row_layout"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Efectividad\nPreventa Marca" android:layout_gravity="center" android:padding="@dimen/padding_item_row_layout" android:gravity="center"/>
            </TableRow>
            <!-- Table content -->
            <TableRow android:id="@+id/row_marcas">

            </TableRow>
            <!-- Table footer -->
            <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Total" android:layout_gravity="center" android:padding="@dimen/padding_item_row_layout" android:layout_weight="1"/>
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal" >
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0" android:padding="@dimen/padding_item_row_layout"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0" android:padding="@dimen/padding_item_row_layout"/>
                </LinearLayout>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0" android:layout_gravity="center_vertical" android:padding="@dimen/padding_item_row_layout"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0" android:layout_gravity="center_vertical" android:padding="@dimen/padding_item_row_layout"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0" android:layout_gravity="center_vertical" android:padding="@dimen/padding_item_row_layout"/>
            </TableRow>
        </TableLayout>
    </HorizontalScrollView>


</LinearLayout>
